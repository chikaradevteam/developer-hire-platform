FROM lscr.io/linuxserver/code-server:latest

# Install C++ build tools and libraries
RUN apt-get update && \
    apt-get install -y \
        build-essential \
        g++ \
        gdb \
        cmake \
        clang \
        libc6-dev \
        libstdc++-12-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Optional: verify installs
RUN g++ --version && cmake --version
